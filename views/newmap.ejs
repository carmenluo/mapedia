<!DOCTYPE html>
<html lang="en">
<!-- JS -->
<script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Foodify</title>
  <!-- CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css" />
  <!-- SEMANTIC UI -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.css" />

  <!-- BOOTSTRAP  -->
  <!--
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous" /> -->

  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <!-- JS -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

  <!-- change type from "text/jsvascript" to "module" client code helpers function module-->
  <script type="module" src="/scripts/app.js"></script>
</head>

<body>
  <input id="mapID" value="<%= data %>" hidden>
  <div id="map">
    <div>
      <script type="text/javascript" src="/scripts/map_v1.js"></script>
      <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCZImsQ1Qw68YIf_tHVOoMhs5wz5-F4JHA&libraries=places&callback=initMap">
        </script>
    </div>
  </div>

  <div id="createMap" class="container demo">
    <button type="button" id="modalbutton" class="ui primary button" data-toggle="modal" data-target="#myModal2">
      Create Map
    </button>
  </div>
  <!-- Modal -->
  <div class="modal right fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
    <div class="modal-dialog" role="document">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
              aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel2">New Map</h4>
        </div>

        <div class="modal-body">
          <form name="submit" class="form-group" action="/maps/mapsubmission" method="POST">
            <div>
              <label for="description">Description</label>
              <textarea name="textsubmit" class="form-control" id="description" rows="3"></textarea>
            </div>
            <div class="form-group">
              <label for="gender1" class="control-label">Category</label>
              <select name="dropdown" class="form-control" id="gender1">
                <option value="camping">Camping</option>
                <option value="foody">Foody</option>
                <option value="wedding">Wedding</option>
              </select>
              <input id="newmap" type="submit" class="btn btn-default" value="Submit">
            </div>
          </form>
        </div>

      </div><!-- modal-content -->
    </div><!-- modal-dialog -->
  </div><!-- modal -->

  </div><!-- container -->


  </main>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.5.0-beta4/html2canvas.js" type="text/javascript"
    xml="space"></script>
</body>

</html>
